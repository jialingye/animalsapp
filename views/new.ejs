<!DOCTYPE html>
<html lang="en">
  <%- include("./head.ejs") %>

  <body>
    <%- include("./header.ejs") %>
    <main>
      <div>
        <form action="/animals" method="post">
          <fieldset>
              <legend>Create a New Animal</legend>
            <label>
              Speices:<input
                type="text"
                name="species"
                placeholder="enter species name"
              />
            </label>
            <label>
              Location:<input
                type="text"
                name="location"
                placeholder="enter location name"
              />
            </label>
            <label>
                Life Expectancy:<input
                  type="text"
                  name="lifeExpectancy"
                  placeholder="enter life expectancy"
                />
              </label>
            <label>
              Extinct:<input type="checkbox" name="extinct" />
            </label>
          </fieldset>
          <input type="submit" value="create new animal" />
        </form>
      </div>
    </main>
  </body>
</html>